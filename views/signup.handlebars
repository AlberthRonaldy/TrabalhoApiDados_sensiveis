<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cadastro</title>
    <link rel="stylesheet" href="/css/signup.css" />
  </head>
  <body>
    <div class="container_signup">
      <h1>Cadastro</h1>
      <form id="registrationForm">
        <div class="input-group">
          <label for="username">Nome de usuário:</label>
          <input 
            type="text" 
            id="username" 
            name="username" 
            size="50" 
            required
          />
        </div>
        <div class="input-group">
          <label for="email">Endereço de email:</label>
          <input 
            type="email" 
            id="email" 
            name="email" 
            size="50" 
            required
          />
        </div>
        <div class="input-group">
          <label for="cpf">CPF:</label>
          <input 
            type="text" 
            id="cpf" 
            name="cpf" 
            size="11" 
            required
          />
        </div>
        <div class="input-group">
          <label for="rg">RG:</label>
          <input 
            type="text" 
            id="rg" 
            name="rg" 
            size="13" 
            required
          />
        </div>
        <div class="input-group">
          <label for="telefone">Telefone:</label>
          <input 
            type="text" 
            id="telefone" 
            name="telefone" 
            size="12" 
            required
          />
        </div>
        <div class="input-group">
          <label for="cep">CEP:</label>
          <input 
            type="text" 
            id="cep" 
            name="cep" 
            size="8"
            required 
          />
        </div>
        <div class="input-group">
          <label for="genero">Gênero:</label>
          <input 
            type="text" 
            id="genero" 
            name="genero" 
            size="15" 
            required 
          />
        </div>
        <div class="input-group">
          <label for="data_nascimento">Data de nascimento:</label>
          <input
            type="text"
            id="data_nascimento"
            name="data_nascimento"
            size="10"
            required
          />
        </div>
        <div class="input-group">
          <label for="cidade_UF_nascimento">Cidade/Uf de nascimento:</label>
          <input
            type="text"
            id="cidade_UF_nascimento"
            name="cidade_UF_nascimento"
            size="20"
            required
          />
        </div>
        <div class="input-group">
          <label for="filiacao">Filiação:</label>
          <input 
            type="text" 
            id="filiacao" 
            name="filiacao"
            size="15" 
            required
          />
        </div>
        <div class="input-group">
          <label for="password">Senha:</label>
          <input 
            type="password" 
            id="password" 
            name="password"
            onkeyup="verifyPass()" 
            size="15"
            autocomplete="off" 
            required
          />
        </div>
        <div class="input-group">
          <label for="confirmPassword">Confirmar senha:</label>
          <input
            type="password"
            id="confirmPassword"
            name="confirmPassword"
            size="15"
            required
          />
        </div>
        <div class="info">
          <div class="feed">Número de caracteres: Mínimo 8</div>
          <div class="feed">Letras Maiúsculas: ABC</div>
          <div class="feed">Números: Entre 0 a 9</div>
          <div class="feed">Caracteres Especiais: @$%&!</div>
        </div>
        <div>
          <button
            id="botao"
            value="Entrar"
            type="submit"
            onclick="enviarFormulario()"
            readonly 
          >Cadastrar</button>
        </div>
      </form>
    </div>
  </body>
</html>